version=2

:if:<level.filename>=tunnel3
	:select:<player.position>
		:when:1,0,2
			@screen.fadeout
			@player.warp(Hayward\tunnel.dat,3,0.1,3)
			@level.update
			@screen.fadein
			:end

		:when:34,0,28
			@screen.fadeout
			@player.warp(Caves\Mt.Boulder\main.dat,25,1.1,14)
			@level.update
			@screen.fadein
			:end
	:endwhen
:endif

:if:<level.filename>=tunnel
			@screen.fadeout
			@player.warp(Routes\tunnel3.dat,1,0.1,2)
			@level.update
			@screen.fadein
			:end
:endif

:if:<level.filename>=main
	@screen.fadeout
	@player.warp(Routes\tunnel3.dat,34,0.1,28)
	@level.update
	@screen.fadein
	:end
:endif

:end
