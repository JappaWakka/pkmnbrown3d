version=2

:select:<environment.daytimeid>
:when:0
@text.show(Hello, and welcome to~the Pokémon Center.*We restore your tired~Pokémon to full health.*Would you like to rest~your Pokémon?)
:when:1
@text.show(Good morning! Welcome~to the Pokémon Center.*We restore your tired~Pokémon to full health.*Would you like to rest~your Pokémon?)
:when:2
@text.show(Hello, and welcome to~the Pokémon Center.*We restore your tired~Pokémon to full health.*Would you like to rest~your Pokémon?)
:when:3
@text.show(Good evening! Welcome~to the Pokémon Center.*We restore your tired~Pokémon to full health.*Would you like to rest~your Pokémon?)
:endwhen

@options.show(Yes,No)
:when:No
@text.show(We hope to see you~again!)
:end

:when:Yes
@text.show(OK, I'll take your~Pokémon for a few~seconds.)
@pokemon.hide
@level.update
@npc.turn(0,1)
@music.stop

:if:<pokemon.count>>0
:then
@npc.warp(10,0.8,-0.05,1.05)
@level.update
@sound.play(pokeball_set,true)
@level.wait(12)
:endif

:if:<pokemon.count>>1
:then
@npc.warp(11,1,-0.05,1.05)
@level.update
@sound.play(pokeball_set,true)
@level.wait(12)
:endif

:if:<pokemon.count>>2
:then
@npc.warp(12,1.2,-0.05,1.05)
@level.update
@sound.play(pokeball_set,true)
@level.wait(12)
:endif

:if:<pokemon.count>>3
:then
@npc.warp(13,0.8,-0.05,1.25)
@level.update
@sound.play(pokeball_set,true)
@level.wait(12)
:endif

:if:<pokemon.count>>4
:then
@npc.warp(14,1,-0.05,1.25)
@level.update
@sound.play(pokeball_set,true)
@level.wait(12)
:endif

:if:<pokemon.count>>5
:then
@npc.warp(15,1.2,-0.05,1.25)
@level.update
@sound.play(pokeball_set,true)
@level.wait(12)
:endif

@pokemon.heal
@sound.play(healing,true)
@level.wait(180)

@npc.warp(10,0.8,-0.3,1.05)
@npc.warp(11,1,-0.3,1.05)
@npc.warp(12,1.2,-0.3,1.05)
@npc.warp(13,0.8,-0.3,1.25)
@npc.warp(14,1,-0.3,1.25)
@npc.warp(15,1.2,-0.3,1.25)
@level.update

@level.wait(20)
@music.continue

@npc.turn(0,2)

@text.show(Thank you for waiting.*We've restored your~Pokémon to full health.*We hope to see you~again!)
:end

:endwhen

:end