version=2
:if:<register.registered(pokemongot)>=False
	@screen.showpokemon(1,0,1)
	@Text.show(Tim: Do you want~Bulbasaur, the water~Pokémon?)
	@Options.show(Yes,No)
		:when:Yes
			@NPC.remove(3)
			@NPC.register(TimsLab.dat|3|remove|1)
			@Register.register(pokemongot)
			@Register.register(starter3)
			@register.unregister(tim1)
			@register.unregister(mura1)
			@register.register(tim2)
			@register.register(mura2)
			@Text.show(Tim: Good choice!)
			@pokemon.add(1,5,As a gift from Prof. Tim,5,at Gravel Town)
			@Text.show(<player.name> received~a Bulbasaur!)
			@pokemon.rename(0)
			:if:<player.position>=8,0,3
				@NPC.turn(4,2)
				@NPC.move(4,2)
				@NPC.turn(4,3)
				@NPC.move(4,2)
				@NPC.turn(4,0)
				@NPC.move(4,1)
				@text.show(Mura: I'll take this one, then!)
				@NPC.remove(1)
				@text.show(Mura received a Charmander!)
			:endif
		:when:No
			@Text.show(Tim: Think it over~carefully.*Your partner is~important.)
		:endwhen
:else
	@Text.show(It contains a~Pokémon caught by~Prof. Tim.)
:endif
:end
