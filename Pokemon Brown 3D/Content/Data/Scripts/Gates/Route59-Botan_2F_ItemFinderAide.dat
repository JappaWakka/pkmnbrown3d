version=2
:if:<Register.Registered(itemfinder)>=false
	@Text.Show(<system.token(Route59_Botan_Gate_2F_Aide_ItemFinder_Question)>)
	@options.show(<system.token(global_yes)>,<system.token(global_no)>)

	:when:<system.token(global_yes)>
		:if:<pokedex.caught>>44
			@Text.Show(<system.token(Route59_Botan_Gate_2F_Aide_ItemFinder_AnswerYes_45OrMorePokemon)>)
			@Item.Give(55,1)
			@Item.MessageGive(55,1)
			@Register.Register(itemfinder)
			@Text.Show(<system.token(Route59_Botan_Gate_2F_Aide_ItemFinder_AfterReceiveItemFinder)>)
			:end
		:else
			@Text.Show(<system.token(Route59_Botan_Gate_2F_Aide_ItemFinder_AnswerYes_LessThan45Pokemon)>)
			:end
		:endif
	:when:<system.token(global_no)>
		@Text.Show(<system.token(Route59_Botan_Gate_2F_Aide_ItemFinder_AnswerNo)>)
		:end
	:endwhen
:else
	@Text.Show(<system.token(Route59_Botan_Gate_2F_Aide_ItemFinder_AfterReceiveItemFinder)>)
:endif
:end
