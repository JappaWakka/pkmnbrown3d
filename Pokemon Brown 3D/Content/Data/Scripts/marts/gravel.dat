version=2

:if:<register.registered(pokedex)>=False
	@text.show(<system.token(Gravel_Main_Clerk_NoDelivery)>)
:else
	@text.show(<system.token(Generic_PokeMart_Clerk)>)
	@options.show(<system.token(Generic_PokeMart_Buy)>,<system.token(Generic_PokeMart_Quit)>)
		:when:<system.token(Generic_PokeMart_Buy)>
			@screen.Trade({5|-1|-1}{18|-1|-1}{9|-1|-1}{13|-1|-1},True,True)
		:when:<system.token(Generic_PokeMart_Quit)>
			@text.show(Thank you!)
:endwhen
:endif
:end