version=2
@Text.Show(<system.token(Hayward_Main_VendingMachine_Menu)>)
@options.setcancelindex(3)
@options.show(<system.token(Hayward_Main_VendingMachine_Option_BeerKeg)>,<system.token(Hayward_Main_VendingMachine_Option_SodaPop)>,<system.token(Hayward_Main_VendingMachine_Option_Lemonade)>,<system.token(global_cancel)>)
	:when:<system.token(Hayward_Main_VendingMachine_Option_BeerKeg)>
		:if:200><player.money>
			@Text.Show(<system.token(Hayward_Main_VendingMachine_NotEnoughMoney)>)
		:else
			@Text.Show(<system.token(Hayward_Main_VendingMachine_Buy_BeerKeg)>)
			@player.money(-200)
			@sound.play(buy)
			@Item.Give(gm7,1)
			@Item.MessageGive(gm7,1)
			:if:<system.random(1,32)>=11
				@Text.Show(<system.token(Hayward_Main_VendingMachine_Extra_BeerKeg)>)
				@Item.Give(gm7,1)
			:endif
		:endif
		:end
	:when:<system.token(Hayward_Main_VendingMachine_Option_SodaPop)>
		:if:300><player.money>
			@Text.Show(<system.token(Hayward_Main_VendingMachine_NotEnoughMoney)>)
		:else
			@Text.Show(<system.token(Hayward_Main_VendingMachine_Buy_SodaPop)>)
			@player.money(-300)
			@sound.play(buy)
			@Item.Give(47,1)
			@Item.MessageGive(47,1)
			:if:<system.random(1,32)>=11
				@Text.Show(<system.token(Hayward_Main_VendingMachine_Extra_SodaPop)>)
				@Item.Give(47,1)
			:endif
		:endif
		:end
	:when:<system.token(Hayward_Main_VendingMachine_Option_Lemonade)>
		:if:350><player.money>
			@Text.Show(<system.token(Hayward_Main_VendingMachine_NotEnoughMoney)>)
		:else
			@Text.Show(<system.token(Hayward_Main_VendingMachine_Buy_Lemonade)>)
			@player.money(-350)
			@sound.play(buy)
			@Item.Give(48,1)
			@Item.MessageGive(48,1)
			:if:<system.random(1,32)>=11
				@Text.Show(<system.token(Hayward_Main_VendingMachine_Extra_Lemonade)>)
				@Item.Give(48,1)
			:endif
		:endif
		:end
:endwhen
:end
