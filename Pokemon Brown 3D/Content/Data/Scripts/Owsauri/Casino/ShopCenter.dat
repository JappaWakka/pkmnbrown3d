version=2
	
@Text.Show(<system.token(Owsauri_Casino_B1F_Shop_Intro)>)
@options.setcancelindex(2)
@options.show(<system.token(Owsauri_Casino_B1F_Shop_Center_Eevee)>,<system.token(Owsauri_Casino_B1F_Shop_Center_Tyrogue)>,<system.token(Owsauri_Casino_B1F_Shop_NoThanks)>)
	:when:<system.token(Owsauri_Casino_B1F_Shop_Center_Eevee)>
		@storage.set(int,PokeNumber,133)
		@storage.set(int,Cost,3500)
		@storage.set(int,PokeLevel,10)
	:when:<system.token(Owsauri_Casino_B1F_Shop_Center_Tyrogue)>
		@storage.set(int,PokeNumber,236)
		@storage.set(int,Cost,5000)
		@storage.set(int,PokeLevel,20)
	:when:<system.token(Owsauri_Casino_B1F_Shop_NoThanks)>
		@storage.clear
		:end
:endwhen

:if:<storage.get(int,Cost)>><player.coins>
	@Text.Show(<system.token(Owsauri_Casino_B1F_Shop_NotEnoughCoins)>)
:else
	@Text.Show(<system.token(Owsauri_Casino_B1F_Shop_ChoosePokemon)>)
	@options.show(<system.token(global_yes)>,<system.token(global_no)>)
	:when:<system.token(global_yes)>
		:if:<system.random(0,<math.floor(<pokemon.mastershinyrate>)>)>=0
			@storage.set(int,PokeShiny,1)
		:else
			@storage.set(int,PokeShiny,0)
		:endif
		
		@pokemon.add(<storage.get(int,PokeNumber)>,<storage.get(int,PokeLevel)>,<system.token(Owsauri_Casino_B1F_Shop_PokemonCatchMethod)>,5,<system.token(Owsauri_Casino_B1F_Shop_PokemonCatchLocation)>,0,<player.name>,0,<storage.get(int,PokeShiny)>)
		@pokemon.setadditionalvalue(<math.int(<pokemon.count>-1)>,<storage.get(str,PokeForm)>)
		:if:<storage.get(int,PokeNumber)>=133
			@Text.Show(<system.token(Generic_ReceiveAnPokemon)>)
		:else
			@Text.Show(<system.token(Generic_ReceiveAPokemon)>)
		:endif
		@player.addcoins(-<storage.get(int,Cost)>)
		@sound.play(buy)
		@pokemon.rename(<math.int(<pokemon.count>-1)>)
		:if:<pokemon.count>>6
			@Text.Show(<system.token(Generic_PokemonToPC)>)
			@pokemon.sendtostorage(<math.int(<pokemon.count>-1)>)
		:endif
	:endwhen
:endif
@storage.clear
:end