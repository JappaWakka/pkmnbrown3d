version=2
	
@Text.Show(<system.token(Owsauri_Casino_1F_Clerk_CoinBuy_Question)>)
@options.show(<system.token(Owsauri_Casino_1F_Clerk_CoinBuy_Answer_50Coins)>,<system.token(Owsauri_Casino_1F_Clerk_CoinBuy_Answer_500Coins)>,<system.token(Owsauri_Casino_1F_Clerk_CoinBuy_Answer_NoThanks)>)
:when:<system.token(Owsauri_Casino_1F_Clerk_CoinBuy_Answer_50Coins)>
	:if:<inventory.countitem(54)>=1
		:if:<player.money>>1000
			@sound.play(buy)
			@Text.Show(<system.token(Owsauri_Casino_1F_Clerk_CoinBuy_Buy50Coins)>)
			@player.addcoins(50)
			@Player.Money(-1000)
			:end
		:else
			@Text.Show(<system.token(Owsauri_Casino_1F_Clerk_CoinBuy_NotEnoughMoney)>)
			:end
		:endif
	:else
		@Text.Show(<system.token(Owsauri_Casino_1F_Clerk_CoinBuy_NoCoinCase)>)
		:end
	:endif
:when:<system.token(Owsauri_Casino_1F_Clerk_CoinBuy_Answer_500Coins)>
	:if:<inventory.countitem(54)>=1
		:if:<player.money>>10000
			@sound.play(buy)
			@Text.Show(<system.token(Owsauri_Casino_1F_Clerk_CoinBuy_Buy500Coins)>)
			@player.addcoins(500)
			@Player.Money(-10000)
			:end
		:else
			@Text.Show(<system.token(Owsauri_Casino_1F_Clerk_CoinBuy_NotEnoughMoney)>)
			:end
		:endif
	:else
		@Text.Show(<system.token(Owsauri_Casino_1F_Clerk_CoinBuy_NoCoinCase)>)
		:end
	:endif
:when:<system.token(Owsauri_Casino_1F_Clerk_CoinBuy_Answer_NoThanks)>
	@Text.Show(<system.token(Owsauri_Casino_1F_Clerk_CoinBuy_No)>)
:endwhen
:end
