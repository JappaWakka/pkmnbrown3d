version=2
	
@text.show(<system.token(Owsauri_GameCorner1F_Clerk_CoinBuy_Question)>)
@options.show(<system.token(Owsauri_GameCorner1F_Clerk_CoinBuy_50Coins)>,<system.token(Owsauri_GameCorner1F_Clerk_CoinBuy_500Coins)>,<system.token(Owsauri_GameCorner1F_Clerk_CoinBuy_Answer_NoThanks)>)
:when:<system.token(Owsauri_GameCorner1F_Clerk_CoinBuy_Buy50Coins)>
	:if:<inventory.countitem(54)>=1
		:if:<player.money>>1000
			@sound.play(buy)
			@text.show(<system.token(Owsauri_GameCorner1F_Clerk_CoinBuy_Buy50Coins)>)
			@player.addcoins(50)
			@player.money(-1000)
			:end
		:else
			@text.show(<system.token(Owsauri_GameCorner1F_Clerk_CoinBuy_NotEnoughMoney)>)
			:end
		:endif
	:else
		@text.show(<system.token(Owsauri_GameCorner1F_Clerk_CoinBuy_NoCoinCase)>)
		:end
	:endif
:when:<system.token(Owsauri_GameCorner1F_Clerk_CoinBuy_500Coins)>
	:if:<inventory.countitem(54)>=1
		:if:<player.money>>10000
			@sound.play(buy)
			@text.show(<system.token(Owsauri_GameCorner1F_Clerk_CoinBuy_Buy500Coins)>)
			@player.addcoins(500)
			@player.money(-10000)
			:end
		:else
			@text.show(<system.token(Owsauri_GameCorner1F_Clerk_CoinBuy_NotEnoughMoney)>)
			:end
		:endif
	:else
		@text.show(<system.token(Owsauri_GameCorner1F_Clerk_CoinBuy_NoCoinCase)>)
		:end
	:endif
:when:<system.token(Owsauri_GameCorner1F_Clerk_CoinBuy_Answer_NoThanks)>
	@text.show(<system.token(Owsauri_GameCorner1F_Clerk_CoinBuy_No)>)
:endwhen
:end