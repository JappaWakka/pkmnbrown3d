version=2

:if:<Player.ThirdPerson>=false
	@Camera.SetToPlayerFacing
:endif
:if:<Player.Facing>=0
	@Player.Warp(MadameRenifler\Hall.dat,1,1.1,-1,2)
:else
	:if:<Player.Facing>=1
		@Player.Warp(MadameRenifler\Hall.dat,1,1.1,-1,1)
	:else
		:if:<Player.Facing>=2
			@Player.Warp(MadameRenifler\Hall.dat,1,1.1,-1,0)
		:else
			@Player.Warp(MadameRenifler\Hall.dat,1,1.1,-1,3)
		:endif
	:endif
:endif
@Level.Update
:if:<Register.Registered(Decorations_Wall_SniffCat)>=true
	@Entity.SetVisible(1,1)
	@Entity.SetVisible(2,0)
	@Entity.Warp(1,~,0,~)
	@Entity.Warp(2,~,-1,~)
	@Level.Update
:endif
:if:<Level.Riding>=true
	@Player.SetSpeed(2)
:else
	:if:<Player.IsRunning>=true
		@Player.SetSpeed(1.5)
	:endif
:endif
@Player.SetMovement(0,-1,1)
@Player.Move(1)
:end
