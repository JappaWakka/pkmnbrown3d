version=2

:if:<Register.Registered(gotpokemon)>=False
	@Text.Show(<system.token(Seashore_PlayerHouse1F_Mom_LookForTim)>)
:else
	:if:<Register.Registered(rijonleague)>=false
		@Text.Show(<system.token(Seashore_PlayerHouse1F_Mom_TakeARest)>)
	:else
		:if:<Register.Registered(bossbeaten)>=false
			:if:<Register.Registered(bugsy_rematch)>=false
				@Text.Show(<system.token(Seashore_PlayerHouse1F_Mom_AfterChampion)>)
			:else
				@Text.Show(<system.token(Seashore_PlayerHouse1F_Mom_AfterRematch)>)
			:endif
			
		:else
			:if:<Register.Registered(bugsy_rematch)>=false
				@Text.Show(<system.token(Seashore_PlayerHouse1F_Mom_AfterFinalDungeon)>)
			:else
				@Text.Show(<system.token(Seashore_PlayerHouse1F_Mom_TakeARest)>)
			:endif
		:endif
	:endif
	@Screen.FadeOut
	@Pokemon.Heal
	@Sound.Play(Heal_Party,1)
	@Level.Wait(50)
	@Screen.Fadein
	@Text.Show(<system.token(Seashore_PlayerHouse1F_Mom_AfterRest)>)
	:if:<Register.Registered(DecorationItem_SurfingPikachuDoll)>=false
		@text.notification(<system.token(DecorationItem_Received_SurfingPikachuDoll)>,800,1,1,,,0,0)
		@Register.Register(DecorationItem_SurfingPikachuDoll)
	:endif
:endif
@NPC.Turn(0,1)
:end