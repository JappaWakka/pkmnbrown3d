version=2

@Pokemon.Cry(145)
:if:<Register.Value(ZapdosRaikouShiny)>=true
	@Text.Show(<system.token(Route60_PowerPlant_Zapdos)>)
	@battle.wild(145,50,1)
:else
	@Text.Show(<system.token(Route60_PowerPlant_Zapdos)>)
	@battle.wild(145,50,0)
:endif
:if:<battle.caught>=false
	@Register.Register(ResetZapdos)
:endif
@register.unregister(Zapdos)
@level.reload
:end