version=2

:if:<Player.ThirdPerson>=false
	@Camera.SetToPlayerFacing
:endif
:if:<Player.Facing>=0
	@Player.Warp(Botan\HauntedForest\Area1.dat,18,0.1,7,1)
:else
	:if:<Player.Facing>=1
		@Player.Warp(Botan\HauntedForest\Area1.dat,18,0.1,7,0)
	:else
		:if:<Player.Facing>=2
			@Player.Warp(Botan\HauntedForest\Area1.dat,18,0.1,7,3)
		:else
			@Player.Warp(Botan\HauntedForest\Area1.dat,18,0.1,7,1)
		:endif
	:endif
:endif
@Level.Update
:if:<Level.Riding>=true
	@Player.SetSpeed(2)
:else
	:if:<Player.IsRunning>=true
		@Player.SetSpeed(1.5)
	:endif
:endif
@Player.Move(1)
:end