version=2
@text.show(<system.token(Botan_Main_HealLady_Intro)>)
@options.show(<system.token(global_yes)>,<system.token(global_no)>)
:when:<system.token(global_yes)>
	@screen.fadeout(15)
	@pokemon.heal
	@sound.play(Heal_Party,1)
	@level.wait(125)
	@screen.fadein(15)
	@Text.Show(<system.token(Botan_Main_HealLady_Outro)>)
:when:<system.token(global_no)>
	@Text.Show(<system.token(Botan_Main_HealLady_Outro)>)
	:end
:endwhen
:end
