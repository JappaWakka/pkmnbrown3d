version=2
:if:<Register.Registered(EliteFourLoreGuy_Intro)>=false
	@Text.Show(<system.token(League_EntranceHall_EliteFourLoreGuy_Intro)>*<system.token(League_EntranceHall_EliteFourLoreGuy_Question)>)
	@Register.Register(EliteFourLoreGuy_Intro)
:else
	@Text.Show(<system.token(League_EntranceHall_EliteFourLoreGuy_Question)>)
:endif
@options.setcancelindex(5)
@options.show(Redd,Jared,Agatha,Drake,Blanch,Quit)
