	:when:Jared
		@Text.Show(<system.token(League_EntranceHall_EliteFourLoreGuy_Answer_Jared)>)
		@script.start(League\EliteFourLoreGuy)
	:when:Agatha
		@Text.Show(<system.token(League_EntranceHall_EliteFourLoreGuy_Answer_Agatha)>)
		@script.start(League\EliteFourLoreGuy)
	:when:Drake
		@Text.Show(<system.token(League_EntranceHall_EliteFourLoreGuy_Answer_Drake)>)
		@script.start(League\EliteFourLoreGuy)
	:when:Blanch
		@Text.Show(<system.token(League_EntranceHall_EliteFourLoreGuy_Answer_Blanch)>)
		@script.start(League\EliteFourLoreGuy)
	:when:Quit
		:end
:endwhen
:end
