version=2

:if:<Register.Registered(sproutbadge_obtain)>=False
	@Text.Show(<system.token(Moraga_Gym_LeaderLois_BeforeBattle)>)
	@Battle.StartTrainer(Gyms\moraga\leader)
	@Register.Register(sproutbadge_obtain)
	@Register.Register(trainer_Gyms\moraga\000)
	@Register.Register(trainer_Gyms\moraga\001)
	@Register.Register(trainer_Gyms\moraga\002)
	@Register.Register(trainer_Gyms\moraga\003)
	@Player.GetBadge(3)
	@Text.Show(<system.token(Moraga_Gym_LeaderLois_AfterBattle1)>)
	@Item.Give(gm39,1)
	@Item.MessageGive(gm39,1)
	@Text.Show(<system.token(Moraga_Gym_LeaderLois_AfterBattle2)>)
:else
	:if:<Register.Registered(rijonleague)>=false
		@Text.Show(<system.token(Moraga_Gym_LeaderLois_TalkAgain)>)
	:else
		:if:<player.hasbadge(11)>=false
			@Text.Show(<system.token(Moraga_Gym_LeaderLois_Rematch_BeforeBattle_Question)>)
			@options.setcancelindex(1)
			@options.show(<system.token(global_yes)>,<system.token(global_no)>)
				:when:<system.token(global_yes)>
					@Text.Show(<system.token(Moraga_Gym_LeaderLois_Rematch_BeforeBattle_Answer_Yes)>)
					@Battle.StartTrainer(Gyms\moraga\leader_rematch)
					@Player.AddBadge(11)
					@Text.Show(<system.token(Moraga_Gym_LeaderLois_Rematch_AfterBattle)>)
				:when:<system.token(global_no)>
					@Text.Show(<system.token(Moraga_Gym_LeaderLois_Rematch_BeforeBattle_Answer_No)>)
			:endwhen
		:else
			@Text.Show(<system.token(Moraga_Gym_LeaderLois_Rematch_AfterBattle)>)
		:endif
	:endif
:endif
:end
