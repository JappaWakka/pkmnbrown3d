version=2
 
@pokemon.select
 
:if:<pokemon.selected>>-1
:then
 
@storage.set(int,pokemon_id_tradestone,<pokemon.id(<pokemon.selected>)>)
 
@pokemon.evolve(<pokemon.selected>,trade)
 
:if:<storage.get(int,pokemon_id_tradestone)>=<pokemon.id(<pokemon.selected>)>
:then
@text.show(This item won't work for this~Pokémon.)
:else
@item.clearitem(1000,1)
:endif
 
:else
 
@text.show(No Pokémon selected.)
 
:endif
 
:end