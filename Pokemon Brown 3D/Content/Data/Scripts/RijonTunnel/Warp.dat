version=2

:if:<level.filename>=RijonTunnel
	:select:<player.position>
		:when:1,0,2
			@screen.fadeout
			@player.warp(Hayward\RijonTunnel_Entrance.dat,3,0.1,3)
			@level.update
			@screen.fadein
			:end

		:when:34,0,28
			@screen.fadeout
			@player.warp(Caves\MtBoulder\main.dat,25,1.1,14)
			@level.update
			@screen.fadein
			:end
	:endwhen
:endif

:if:<level.filename>=RijonTunnel_Entrance
	@screen.fadeout
	@player.warp(Routes\RijonTunnel.dat,1,0.1,2)
	@level.update
	@screen.fadein
	:end
:endif

:if:<level.filename>=Main
	@screen.fadeout
	@player.warp(Routes\RijonTunnel.dat,34,0.1,28)
	@level.update
	@screen.fadein
	:end
:endif

:end
