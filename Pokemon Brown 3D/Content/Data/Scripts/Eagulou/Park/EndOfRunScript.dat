version=2
@sound.play(EagulouParkBell)
@Text.Show(<system.token(Eagulou_Park_TimeIsUp)>)
@screen.fadeout(15)
@player.warp(Eagulou\Park\gate.dat,4,0.1,0)
@player.turnto(2)
@level.update
@screen.fadein(15)
@player.move(2)
@player.turnto(3)
@script.cleardelay(ParkSteps)
