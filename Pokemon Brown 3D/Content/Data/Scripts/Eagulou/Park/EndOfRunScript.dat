:if:<inventory.countitem(181)>>0
	@Text.Show(<system.token(Eagulou_Park_Gate_EntranceClerk_EndOfRun)>)
	@item.remove(181,<inventory.countitem(181)>)
:endif
@Text.Show(<system.token(Eagulou_Park_Gate_EntranceClerk_Exit_ComeAgain)>)
@player.turnto(2)
@player.move(1)
:end
